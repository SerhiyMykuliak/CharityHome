<!DOCTYPE html>
<html>
  <head>
    <title>CharityHome</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">


    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= javascript_importmap_tags %>
  
    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11.1.5/swiper-bundle.min.css">

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11.1.5/swiper-bundle.min.js"></script>
    
  </head>

  <body>
    <header>
      <div class="container">
        <div class="nav">
          <ul>
            <li><%= link_to "HOME", root_path%></li>
            <li><%= link_to "ABOUT", 'about'%></li>
            <li><%= link_to "CAUSES", causes_path%></li>
            <li><%= link_to "BLOG", posts_path%></li>
            <li><%= link_to "VOLUNTEER", volunteers_path%></li>
            <li><%= link_to "GALLERY", photo_galleries_path%></li>
            <li>CONTACT</li>
            <li>
              <%if current_admin.present?%>
                  <%= current_admin.email%>
                  <%= button_to "Вийти", session_path, method: :delete%>
                <%else%>
                  <%= link_to "Вхід", new_session_path%>
              <%end%>
            </li>
          </ul>
        </div>
        <div class="search"><i class="fa fa-search search-icon"></i></div>
      </div>
    </header>
    
    <%= yield %>

    <footer>
      <div class="footer">
        <div class="footer__container">
          <div class="footer__about">
            <div class="footer__logo"><%= image_tag "logo-white.png"%></div>
            <p>Lorem ipsum dolor sit amet, eu me evert laboramus, iudico</p>
            <div class="footer__contacts">
              <p><i class="fa fa-map-marker"></i> 60 Grant Ave. Carteret NJ 0708</p>
              <p><i class="fa fa-phone"></i>(880)1723801729 </p>
              <p><i class="fa fa-regular fa-envelope"></i>example@gmail.com</p>
            </div>
            <div class="contacts footer__social">
              <%= link_to "https://www.facebook.com/" do %>
                <i class="fa-brands fa-facebook-f"></i>
              <% end %>
              <%= link_to "https://x.com/" do %>
                <i class="fa-brands fa-twitter"></i>
              <% end %>
              <%= link_to "https://www.linkedin.com/" do %>
                <i class="fa-brands fa-linkedin-in"></i>
              <% end %>
            </div>
          </div>

          <div class="footer__pages">
            <h3 class="footer__title">Pages</h3>
            <ul>
              <li><%=link_to "Home", root_path%></li>
              <li><%=link_to "Volunteers", volunteers_path%></li>
            </ul>
          </div>

          <div class="footer__news">
            <h3 class="footer__title">Latest News</h3>
            
            <% @recent_posts.each do |post| %>
              <div class="footer__post">
                <%=link_to post.title, post, class:"footer__post-title"%>
                <div class="footer__post-date"><%=post.created_at.strftime("%B %d, %Y")%></div>
              </div>
            <% end %>
          </div>

          <div class="footer__contact-us">
            <h3 class="footer__title">Pages</h3>
          </div>
        </div>
      </div>
    </footer>

    
  </body>
</html>
