<%= render 'layouts/hero_section', title: @post.title %>

<div class="post container">
  <div class="post__container">
    <%=image_tag @post.post_picture, class:"post__picture"%>
    <div class="post__details">
      <div class="date-box">
        <div class="date">
          <div class="date__day"><%=@post.created_at.strftime('%d')%></div>
          <div class="date__month"><%=@post.created_at.strftime('%b')%></div>
        </div>
      </div>

      <div class="post__content"><%=@post.content%></div>
    </div>
  </div>

  <%= render 'layouts/right_bar' %>
</div>