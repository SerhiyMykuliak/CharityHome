
<%= render 'layouts/hero_section', title: @title %>


<div class="blog">
  <div class="container blog__container">
    <div class="blog__content">
      <%= render 'shared/create_button', model: Post%>

      <div class="blog__posts">
        <% @posts.each do |post| %>
          <%= render 'post_card', post: post %>
        <% end %>
      </div>
      <%= paginate @posts%>
    </div>

    <%= render 'layouts/right_bar' %>
  </div>
  
</div>
