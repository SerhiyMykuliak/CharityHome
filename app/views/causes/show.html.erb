
<%= render 'layouts/hero_section', title: @cause.title %>
  

<div class="container cause-container">
  <div class="cause">
    <%=image_tag @cause.cause_picture, class:"image"%>

    <div class="cause__details">
      <div class="date-box">
        <div class="date">
          <div class="date__day"><%=@cause.created_at.strftime('%d')%></div>
          <div class="date__month"><%=@cause.created_at.strftime('%b')%></div>
        </div>
      </div>

      <div class="cause__content">
        <%= render 'shared/change_delete_buttons', record: @cause %>

        <p class="cause__description"><%=@cause.description%></p>
        <div class="cause__campaing-summary">
          <div class="cause__campaing-summary-column">
            <span><%=progress_percentage(@cause.total_donations_amount, @cause.goal_amount)%>%</span>
            <p>Raised</p>  
          </div>
          <div class="cause__campaing-summary-column">
            <span>$<%=@cause.total_donations_amount%></span>
            <p>donated of $<%=@cause.goal_amount%> goal</p>
          </div>
          <div class="cause__campaing-summary-column">
            <span><%= @cause.total_donations_count %></span>
            <p>Donors</p>  
          </div>
          <div class="cause__campaing-summary-column">
            <span><%= button_to "DONATE NOW", new_cause_donation_path(@cause), method: :get, class: "button_secondary" %></span>
          </div>
        </div>

        <p class="font-16 mg"><%=@cause.content%></p>
      </div>
    </div>
  </div>
  <%= render 'layouts/right_bar' %> 
</div>


